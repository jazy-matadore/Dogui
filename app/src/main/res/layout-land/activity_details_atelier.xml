<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".DetailsAtelierActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <fragment
            android:id="@+id/fragment_Image_detail"
            android:name="ca.fatim.douguifirst.FragmentImageAtelier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            tools:layout="@layout/fragment_image_atelier"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <fragment
            android:id="@+id/fragment_formulaire_ajout_detail"
            android:name="ca.fatim.douguifirst.FragmentAjoutAtelier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_Image_detail"
            tools:layout="@layout/fragment_ajout_atelier"/>
    </LinearLayout>
</LinearLayout>